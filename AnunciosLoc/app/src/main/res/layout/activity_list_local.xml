<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background">

    <!-- TOOLBAR COM LOGO CENTRALIZADA -->
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            app:contentInsetStart="0dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp">

                <!-- Seta voltar -->
                <ImageView
                    android:id="@+id/btnBackLocais"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_arrow_back"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:padding="12dp"
                    app:tint="@color/white"
                    android:contentDescription="Voltar" />

                <!-- LOGO CENTRALIZADA -->
                <FrameLayout
                    android:id="@+id/logo_container"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/circle_background">

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="80dp"
                        android:layout_gravity="center"
                        android:src="@raw/logotipo"
                        android:scaleType="centerInside" />
                </FrameLayout>

            </RelativeLayout>
        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>

    <!-- CARD FIXO COM CONTEÚDO -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="24dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="12dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!-- Título "Gerir Locais" -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Gerir Locais"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="@color/verde_principal"
                android:padding="20dp"
                android:gravity="center" />

            <!-- TABS CUSTOMIZADAS -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingBottom="12dp"
                android:gravity="center">

                <!-- Tab "Todos Locais" -->
                <LinearLayout
                    android:id="@+id/tabTodosLocais"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:background="?attr/selectableItemBackground">

                    <TextView
                        android:id="@+id/tvTabTodosLocais"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Todos Locais"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:textColor="@color/verde_principal" />

                    <View
                        android:id="@+id/indicatorTodosLocais"
                        android:layout_width="60dp"
                        android:layout_height="3dp"
                        android:layout_marginTop="8dp"
                        android:background="@color/verde_principal"
                        android:visibility="visible" />
                </LinearLayout>

                <!-- Tab "Criados Por Si" -->
                <LinearLayout
                    android:id="@+id/tabCriadosPorSi"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:background="?attr/selectableItemBackground">

                    <TextView
                        android:id="@+id/tvTabCriadosPorSi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Criados Por Si"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:textColor="@color/cinza_texto" />

                    <View
                        android:id="@+id/indicatorCriadosPorSi"
                        android:layout_width="60dp"
                        android:layout_height="3dp"
                        android:layout_marginTop="8dp"
                        android:background="@color/verde_principal"
                        android:visibility="gone" />
                </LinearLayout>

            </LinearLayout>

            <!-- Barra de pesquisa -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="@color/gray_100">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="4dp">

                    <!-- Lupa -->
                    <ImageView
                        android:id="@+id/btnSearchLocais"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_search"
                        android:padding="10dp"
                        app:tint="@color/verde_principal"
                        android:contentDescription="Pesquisar" />

                    <!-- Campo de texto -->
                    <EditText
                        android:id="@+id/etSearchLocais"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="Pesquisar local..."
                        android:textColorHint="#999999"
                        android:textSize="16sp"
                        android:background="@android:color/transparent"
                        android:padding="12dp"
                        android:inputType="text"
                        android:maxLines="1" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Container com scroll para conteúdo das tabs -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <!-- CONTEÚDO TAB "TODOS LOCAIS" -->
                <LinearLayout
                    android:id="@+id/contentTodosLocais"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <ScrollView
                        android:id="@+id/scrollViewTodosLocais"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fillViewport="true"
                        android:scrollbars="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:paddingStart="16dp"
                            android:paddingEnd="16dp"
                            android:paddingBottom="16dp">

                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/rvTodosLocais"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:nestedScrollingEnabled="false"
                                android:clipToPadding="false" />

                            <TextView
                                android:id="@+id/tvEmptyTodosLocais"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="48dp"
                                android:gravity="center"
                                android:text="Nenhum local disponível"
                                android:textColor="@color/cinza_texto"
                                android:textSize="16sp"
                                android:visibility="gone" />

                        </LinearLayout>
                    </ScrollView>
                </LinearLayout>

                <!-- CONTEÚDO TAB "CRIADOS POR SI" -->
                <LinearLayout
                    android:id="@+id/contentCriadosPorSi"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <ScrollView
                        android:id="@+id/scrollViewCriadosPorSi"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:fillViewport="true"
                        android:scrollbars="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:paddingStart="16dp"
                            android:paddingEnd="16dp"
                            android:paddingBottom="16dp">

                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/rvCriadosPorSi"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:nestedScrollingEnabled="false"
                                android:clipToPadding="false" />

                            <TextView
                                android:id="@+id/tvEmptyCriadosPorSi"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="48dp"
                                android:gravity="center"
                                android:text="Você ainda não criou nenhum local"
                                android:textColor="@color/cinza_texto"
                                android:textSize="16sp"
                                android:visibility="gone" />

                        </LinearLayout>
                    </ScrollView>

                    <!-- Botão Adicionar Local (APENAS na aba "Criados Por Si") -->
                    <Button
                        android:id="@+id/btnAddLocalFixo"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:text="Adicionar Local"
                        android:textColor="@android:color/white"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:background="@drawable/button_limpar_arredondado"
                        android:backgroundTint="@color/verde_principal"
                        android:layout_margin="16dp" />

                </LinearLayout>

            </FrameLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>