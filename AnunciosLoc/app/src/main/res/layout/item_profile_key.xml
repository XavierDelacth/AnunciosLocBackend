<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_key"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header do Item -->
        <LinearLayout
            android:id="@+id/layout_key_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="16dp">

            <!-- Icon Container -->
            <androidx.cardview.widget.CardView
                android:id="@+id/card_key_icon"
                android:layout_width="48dp"
                android:layout_height="48dp"
                app:cardBackgroundColor="@color/gray_300"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp">

                <TextView
                    android:id="@+id/tv_key_icon"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="C"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </androidx.cardview.widget.CardView>

            <!-- Key Info -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_key_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Clube"
                    android:textColor="@color/gray_900"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_key_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="Real Madrid"
                    android:textColor="@color/gray_600"
                    android:textSize="14sp" />
            </LinearLayout>

            <!-- Expand Icon -->
            <ImageView
                android:id="@+id/img_expand"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:contentDescription="@string/expand"
                android:src="@drawable/ic_chevron_down"
                app:tint="@color/gray_600" />
        </LinearLayout>

        <!-- Valores Expandidos -->
        <LinearLayout
            android:id="@+id/layout_values_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/gray_50"
            android:orientation="vertical"
            android:paddingStart="16dp"
            android:paddingTop="12dp"
            android:paddingEnd="16dp"
            android:paddingBottom="16dp"
            android:visibility="gone">

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray_200"
                android:layout_marginBottom="12dp" />

            <com.google.android.flexbox.FlexboxLayout
                android:id="@+id/flexbox_values"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:flexWrap="wrap"
                app:alignItems="stretch"
                app:justifyContent="flex_start"/>

        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>