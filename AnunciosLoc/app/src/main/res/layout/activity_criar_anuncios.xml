<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical">

    <!-- ==================== TOOLBAR SIMPLES ==================== -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#FFFFFF"
        android:elevation="0dp"
        android:paddingStart="8dp"
        android:paddingEnd="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <!-- Seta de Voltar -->
            <ImageView
                android:id="@+id/btnBack"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Voltar"
                android:padding="12dp"
                android:src="@drawable/ic_arrow_back_green"
                app:tint="#333333" />
            <!-- Título -->
            <TextView
                android:id="@+id/tvTituloTela"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="78dp"
                android:layout_weight="1"
                android:text="Novo Anúncio"
                android:textColor="@color/verde_principal"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>
    </androidx.appcompat.widget.Toolbar>

    <!-- ==================== CONTEÚDO PRINCIPAL ==================== -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:padding="24dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- ==== LOCAL DE PROPAGAÇÃO ==== -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="Local de Propagação"
                android:textColor="@color/verde_principal"
                android:textSize="16sp"
                android:textStyle="bold" />
            <!-- LINHA: CAMPO + ÍCONE + (mesma linha) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginBottom="20dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <!-- CAMPO DE TEXTO -->
                <LinearLayout
                    android:id="@+id/llLocal"
                    android:layout_width="270dp"
                    android:layout_height="50dp"
                    android:background="@drawable/spinner_restricao_background"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackground"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/tvLocalSelecionado"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Benguela"
                        android:textColor="#424242"
                        android:textSize="15sp" />

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/ic_arrow_drop_down"
                        app:tint="#757575" />
                    <!-- Spinner invisível (apenas para lógica) -->
                    <Spinner
                        android:id="@+id/spinnerLocais"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:visibility="invisible"/>
                </LinearLayout>

                <!-- ÍCONE + AO LADO DIREITO -->
                <ImageView
                    android:id="@+id/btnAddLocation"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:padding="12dp"
                    android:src="@android:drawable/ic_menu_add"
                    app:tint="@color/verde_principal" />
            </LinearLayout>

            <!-- ==== TÍTULO DO ANÚNCIO ==== -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="Título do Anúncio"
                android:textColor="@color/verde_principal"
                android:textSize="16sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/etTitulo"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/edittext_background"
                android:hint="Digite o título..."
                android:inputType="textCapSentences"
                android:maxLines="1"
                android:padding="16dp"
                android:textColor="#212121"
                android:textColorHint="#757575" />

            <!-- ==== IMAGEM DO ANÚNCIO ==== -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="Imagem do Anúncio"
                android:textColor="@color/verde_principal"
                android:textSize="16sp"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/llImagem"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/edittext_background"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="16dp">

                <ImageView
                    android:id="@+id/ivPreviewImagem"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginEnd="16dp"
                    android:background="#EEEEEE"
                    android:scaleType="centerCrop"
                    android:src="@android:drawable/ic_menu_gallery"
                    app:tint="#757575" />

                <TextView
                    android:id="@+id/tvImagemHint"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Toque para adicionar uma imagem"
                    android:textColor="#757575"
                    android:textSize="15sp" />
            </LinearLayout>

            <!-- ==== MENSAGEM DO ANÚNCIO ==== -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="Mensagem do Anúncio"
                android:textColor="@color/verde_principal"
                android:textSize="16sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/etMensagem"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/edittext_background"
                android:gravity="top|start"
                android:hint="Escreva uma mensagem..."
                android:inputType="textMultiLine"
                android:padding="16dp"
                android:textColor="#212121"
                android:textColorHint="#757575" />

            <!-- ==== PERÍODO DE PROPAGAÇÃO ==== -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="Período de Propagação"
                android:textColor="@color/verde_principal"
                android:textSize="16sp"
                android:textStyle="bold" />

            <!-- Data Início -->
            <LinearLayout
                android:id="@+id/llDataInicio"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginBottom="12dp"
                android:background="@drawable/edittext_background"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Data início"
                    android:textColor="#424242"
                    android:textSize="15sp" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/tvDataInicio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="dd/mm/aaaa"
                    android:textColor="#757575"
                    android:textSize="15sp" />

                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_marginStart="8dp"
                    android:src="@android:drawable/ic_menu_today"
                    app:tint="#757575" />
            </LinearLayout>

            <!-- Data Fim -->
            <LinearLayout
                android:id="@+id/llDataFim"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginBottom="12dp"
                android:background="@drawable/edittext_background"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Data fim"
                    android:textColor="#424242"
                    android:textSize="15sp" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/tvDataFim"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="dd/mm/aaaa"
                    android:textColor="#757575"
                    android:textSize="15sp" />

                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_marginStart="8dp"
                    android:src="@android:drawable/ic_menu_today"
                    app:tint="#757575" />
            </LinearLayout>

            <!-- Hora Início -->
            <LinearLayout
                android:id="@+id/llHoraInicio"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginBottom="12dp"
                android:background="@drawable/edittext_background"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hora início"
                    android:textColor="#424242"
                    android:textSize="15sp" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/tvHoraInicio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="hh:mm"
                    android:textColor="#757575"
                    android:textSize="15sp" />

                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_marginStart="8dp"
                    android:src="@android:drawable/ic_menu_recent_history"
                    app:tint="#757575" />
            </LinearLayout>

            <!-- Hora Fim -->
            <LinearLayout
                android:id="@+id/llHoraFim"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/edittext_background"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hora fim"
                    android:textColor="#424242"
                    android:textSize="15sp" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/tvHoraFim"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="hh:mm"
                    android:textColor="#757575"
                    android:textSize="15sp" />

                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_marginStart="8dp"
                    android:src="@android:drawable/ic_menu_recent_history"
                    app:tint="#757575" />
            </LinearLayout>

            <!-- ==== TIPO DE RESTRIÇÃO ==== -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="Tipo de Restrição"
                android:textColor="@color/verde_principal"
                android:textSize="16sp"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/llTipoRestricao"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/spinner_restricao_background"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="16dp">

                <TextView
                    android:id="@+id/tvTipoRestricao"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Whitelist"
                    android:textColor="#424242"
                    android:textSize="15sp" />

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_arrow_drop_down"
                    app:tint="#757575" />
                <!-- Spinner invisível (apenas para lógica) -->
                <Spinner
                    android:id="@+id/spinnerRestricao"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:visibility="invisible"/>
            </LinearLayout>

            <!-- ==== MODO DE ENTREGA ==== -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="Modo de Entrega"
                android:textColor="@color/verde_principal"
                android:textSize="16sp"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/llModoEntrega"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/spinner_restricao_background"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="16dp">

                <TextView
                    android:id="@+id/tvModoEntrega"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Centralizado"
                    android:textColor="#424242"
                    android:textSize="15sp" />

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_arrow_drop_down"
                    app:tint="#757575" />
                <!-- Spinner invisível (apenas para lógica) -->
                <Spinner
                    android:id="@+id/spinnerModoEntrega"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:visibility="invisible"/>
            </LinearLayout>

            <!-- ==== CHAVES DE PERFIL ==== -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="Chaves de Perfil"
                android:textColor="@color/verde_principal"
                android:textSize="16sp"
                android:textStyle="bold" />

            <!-- CARD COM TABS + PESQUISA + BOTÃO + + CHAVES EXPANSÍVEIS -->
            <androidx.cardview.widget.CardView
                android:id="@+id/card_chaves_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- Barra de Pesquisa + Botão + -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:background="#FFFFFF"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingHorizontal="16dp">

                        <!-- Barra de Pesquisa com CardView -->
                        <androidx.cardview.widget.CardView
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:layout_marginEnd="8dp"
                            android:layout_weight="1"
                            app:cardCornerRadius="8dp"
                            app:cardElevation="2dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center_vertical"
                                android:orientation="horizontal"
                                android:paddingStart="12dp"
                                android:paddingEnd="8dp">

                                <ImageView
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:src="@android:drawable/ic_menu_search"
                                    app:tint="#9E9E9E" />

                                <EditText
                                    android:id="@+id/etPesquisarChaves"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:background="@null"
                                    android:hint="Pesquisar chaves..."
                                    android:imeOptions="actionSearch"
                                    android:inputType="text"
                                    android:paddingStart="8dp"
                                    android:paddingEnd="8dp"
                                    android:textColor="#212121"
                                    android:textColorHint="#9E9E9E"
                                    android:textSize="14sp" />
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>

                        <!-- BOTÃO + -->
                        <ImageView
                            android:id="@+id/btnAdicionarChave"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:padding="8dp"
                            android:src="@android:drawable/ic_menu_add"
                            app:tint="@color/verde_principal" />
                    </LinearLayout>

                    <!-- TABS: Minhas Chaves / Chaves Públicas -->
                    <LinearLayout
                        android:id="@+id/tabs_chaves"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:orientation="horizontal">



                    </LinearLayout>

                    <!-- ScrollView com Chaves Expansíveis -->
                    <ScrollView
                        android:id="@+id/scrollChaves"
                        android:layout_width="match_parent"
                        android:layout_height="300dp"
                        android:fillViewport="true"
                        android:scrollbars="vertical">

                        <LinearLayout
                            android:id="@+id/containerChaves"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <!-- Lista de Chaves (RecyclerView) -->
                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/rv_chaves_restricoes"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:clipToPadding="false"
                                android:paddingBottom="80dp"
                                tools:itemCount="3"
                                tools:listitem="@layout/item_profile_key" />
                        </LinearLayout>
                    </ScrollView>

                    <!-- Estado Vazio -->
                    <LinearLayout
                        android:id="@+id/layout_empty_chaves"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="40dp"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <ImageView
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:alpha="0.3"
                            android:contentDescription="Sem chaves"
                            android:src="@drawable/ic_key"
                            app:tint="@color/gray_400" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:text="Nenhuma restrição selecionada"
                            android:textColor="@color/gray_500"
                            android:textSize="16sp" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- BOTÃO PUBLICAR ANÚNCIO -->
            <Button
                android:id="@+id/btnPublicar"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="24dp"
                android:background="@drawable/button_limpar_arredondado"
                android:text="Publicar Anúncio"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>