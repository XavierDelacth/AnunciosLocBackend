<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#FFFFFF"
    android:paddingTop="6dp"
    android:paddingBottom="6dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="2dp"
        app:cardBackgroundColor="@color/gray_100">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Header com nome e botões de ação -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!-- NOME DO LOCAL -->
                <TextView
                    android:id="@+id/tv_nome_local"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_toStartOf="@id/layoutAcoes"
                    android:text="Belas Shopping"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/verde_principal"
                    android:maxLines="2"
                    android:ellipsize="end"/>

                <!-- Botões de ação (Editar e Excluir) -->
                <LinearLayout
                    android:id="@+id/layoutAcoes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <!-- Botão Editar -->
                    <ImageView
                        android:id="@+id/btnEditarLocal"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:src="@drawable/ic_edit"
                        android:padding="6dp"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        app:tint="@color/verde_principal"
                        android:contentDescription="Editar local" />

                    <!-- Botão Excluir -->
                    <ImageView
                        android:id="@+id/btnExcluirLocal"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:src="@drawable/ic_delete"
                        android:padding="6dp"
                        android:layout_marginStart="4dp"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        app:tint="@color/vermelho_cancelar"
                        android:contentDescription="Excluir local" />
                </LinearLayout>

            </RelativeLayout>

            <!-- INFORMAÇÕES (Raio | Lat | Lng | GPS/Wi-Fi) -->
            <LinearLayout
                android:id="@+id/tv_infos_local"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp"
                android:gravity="end">

                <TextView
                    android:id="@+id/tv_raio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Raio: 500m | "
                    android:textColor="#666666"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/tv_lat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lat: -8.9200 | "
                    android:textColor="#666666"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/tv_lng"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lng: 13.2300 | "
                    android:textColor="#666666"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/tv_tipo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="GPS"
                    android:textColor="@color/verde_principal"
                    android:textStyle="bold"
                    android:textSize="13sp" />
            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>