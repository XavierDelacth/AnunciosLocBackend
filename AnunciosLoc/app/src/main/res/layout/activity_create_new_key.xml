<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/scroll_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true"
    android:background="@drawable/bg_dialog">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="20dp">

            <ImageButton
                android:id="@+id/btn_back"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="@string/back"
                android:padding="4dp"
                android:src="@drawable/ic_arrow_back"
                app:tint="@color/gray_600" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="12dp"
                android:text="@string/create_new_key_title"
                android:textColor="@color/gray_900"
                android:textSize="22sp"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/btn_close_dialog"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="@string/cancel"
                android:padding="4dp"
                android:src="@drawable/ic_close"
                app:tint="@color/gray_600" />
        </LinearLayout>

        <!-- Nome da Chave -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="@string/key_name"
            android:textColor="@color/gray_700"
            android:textSize="14sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/et_key_name"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginBottom="24dp"
            android:background="@drawable/bg_input_field"
            android:hint="@string/key_name_hint"
            android:inputType="textCapWords"
            android:maxLines="1"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:textColor="@color/gray_900"
            android:textColorHint="@color/gray_500"
            android:textSize="16sp" />

        <!-- Valores da Chave -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/key_values"
                android:textColor="@color/gray_700"
                android:textSize="14sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn_add_value_field"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:drawableStart="@drawable/ic_add"
                android:drawablePadding="6dp"
                android:drawableTint="@color/teal_600"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:text="Adicionar"
                android:textAllCaps="false"
                android:textColor="@color/teal_600"
                android:textSize="14sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Container de Valores Dinâmicos -->
        <LinearLayout
            android:id="@+id/container_values"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="16dp">

            <!-- Primeiro campo de valor (sempre presente) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp">

                <EditText
                    android:id="@+id/et_value_1"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_input_field"
                    android:hint="Valor 1"
                    android:inputType="text"
                    android:maxLines="1"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:textColor="@color/gray_900"
                    android:textColorHint="@color/gray_500"
                    android:textSize="16sp" />

                <!-- Espaço invisível (alinha com botão remover) -->
                <View
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="8dp"
                    android:visibility="invisible" />
            </LinearLayout>

        </LinearLayout>

        <!-- Info Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:cardBackgroundColor="@color/teal_50"
            app:cardCornerRadius="12dp"
            app:cardElevation="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_info"
                    app:tint="@color/teal_700" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="12dp"
                    android:text="Você pode adicionar vários valores para uma única chave. Por exemplo, para a chave &quot;Clube&quot;, pode adicionar: Real Madrid, Barcelona, etc."
                    android:textColor="@color/teal_700"
                    android:textSize="13sp"
                    android:lineSpacingExtra="2dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Botão Criar Chave -->
        <Button
            android:id="@+id/btn_create_key"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@drawable/bg_button_primary"
            android:text="@string/create_key"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold" />

    </LinearLayout>
</ScrollView>