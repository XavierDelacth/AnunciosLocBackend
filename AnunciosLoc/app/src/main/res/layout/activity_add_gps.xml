<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background">

    <!-- Fundo esmaecido sobre o conteúdo -->
    <View
        android:id="@+id/overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#80000000" />

    <!-- Card centralizado para "Novo Local" -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardNovoLocal"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        app:cardCornerRadius="16dp"
        app:cardElevation="10dp"
        android:backgroundTint="@android:color/white">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fillViewport="true"
            android:background="@android:color/transparent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <!-- Título e botão Fechar -->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="8dp">

                    <TextView
                        android:id="@+id/tvTitulo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Novo Local"
                        android:textColor="@color/verde_principal"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:layout_centerHorizontal="true" />

                    <ImageView
                        android:id="@+id/btnFechar"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="225dp"
                        android:contentDescription="Fechar"
                        android:src="@drawable/ic_close"
                        app:tint="@color/gray_500" />
                </RelativeLayout>

                <!-- Alternador GPS / WIFI -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginBottom="16dp">

                    <Button
                        android:id="@+id/btnGps"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="GPS"
                        android:backgroundTint="@color/verde_principal"
                        android:textColor="@android:color/white"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/btnWifi"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="WIFI"
                        android:backgroundTint="#E0E0E0"
                        android:textColor="@android:color/darker_gray"
                        android:textStyle="bold" />
                </LinearLayout>

                <!-- Campo Nome do Local -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nome do Local"
                    android:textColor="@color/verde_principal"
                    android:textSize="14sp"
                    android:layout_marginBottom="4dp" />

                <EditText
                    android:id="@+id/etNomeLocal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="exemplo"
                    android:background="@drawable/edittext_background"
                    android:padding="10dp"
                    android:textColorHint="#999999" />

                <!-- Switch para mapeamento -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="left"
                    android:layout_marginTop="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mapear localização"
                        android:textColor="@color/verde_principal"
                        android:textSize="14sp" />

                    <Switch
                        android:id="@+id/switchMapear"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <!-- Latitude e Longitude -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="12dp">

                    <EditText
                        android:id="@+id/etLatitude"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="Latitude"
                        android:inputType="numberDecimal"
                        android:background="@drawable/edittext_background"
                        android:padding="10dp" />

                    <View
                        android:layout_width="8dp"
                        android:layout_height="wrap_content" />

                    <EditText
                        android:id="@+id/etLongitude"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="Longitude"
                        android:inputType="numberDecimal"
                        android:background="@drawable/edittext_background"
                        android:padding="10dp" />
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Mapa (toque para definir coordenadas)"
                    android:textColor="@color/verde_principal"
                    android:textStyle="bold"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="6dp"/>

                <fragment
                    android:id="@+id/fragmentoMapa"
                    android:name="com.google.android.gms.maps.SupportMapFragment"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:layout_marginBottom="12dp"/>


                <!-- Raio -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Raio (em metros)"
                    android:textColor="@color/verde_principal"
                    android:textSize="14sp"
                    android:layout_marginTop="12dp" />

                <EditText
                    android:id="@+id/etRaio"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="20"
                    android:inputType="number"
                    android:background="@drawable/edittext_background"
                    android:padding="10dp" />

                <!-- Botões Cancelar / Adicionar -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginTop="20dp">

                    <Button
                        android:id="@+id/btnCancelar"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Cancelar"
                        android:backgroundTint="@color/vermelho_cancelar"
                        android:textColor="@android:color/white"
                        android:textStyle="bold" />

                    <View
                        android:layout_width="8dp"
                        android:layout_height="wrap_content" />

                    <Button
                        android:id="@+id/btnAdicionar"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Adicionar"
                        android:backgroundTint="@color/verde_principal"
                        android:textColor="@android:color/white"
                        android:textStyle="bold" />
                </LinearLayout>

            </LinearLayout>
        </ScrollView>
    </androidx.cardview.widget.CardView>

</RelativeLayout>
