<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@drawable/gradient_background">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Fundo escurecido -->
        <View
            android:id="@+id/overlay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#80000000" />

        <!-- Card centralizado -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardNovoLocalWiFi"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            app:cardCornerRadius="16dp"
            app:cardElevation="10dp"
            android:backgroundTint="@android:color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <!-- Título e botão Fechar -->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="8dp">

                    <TextView
                        android:id="@+id/tvTituloWiFi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Novo Local"
                        android:textColor="@color/verde_principal"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:layout_centerHorizontal="true" />

                    <ImageView
                        android:id="@+id/btnFecharWiFi"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="234dp"
                        android:contentDescription="Fechar"
                        android:src="@drawable/ic_close"
                        app:tint="@color/gray_500" />
                </RelativeLayout>

                <!-- Botões GPS / WiFi -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btnGpsToggle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:backgroundTint="#E0E0E0"
                        android:text="GPS"
                        android:textColor="@android:color/darker_gray"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/btnWifiToggle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:backgroundTint="@color/verde_principal"
                        android:text="WiFi"
                        android:textColor="@android:color/white"
                        android:textStyle="bold" />
                </LinearLayout>

                <!-- Conteúdo dinâmico -->
                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:fillViewport="true">

                    <LinearLayout
                        android:id="@+id/layoutConteudoWiFi"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <!-- Campo Nome do Local -->
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="4dp"
                            android:text="Nome do Local"
                            android:textColor="@color/verde_principal"
                            android:textSize="14sp" />

                        <EditText
                            android:id="@+id/etNomeLocalWiFi"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/edittext_background"
                            android:hint="exemplo"
                            android:padding="10dp"
                            android:textColorHint="#999999" />

                        <!-- Campo SSID -->
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:layout_marginBottom="4dp"
                            android:text="SSID"
                            android:textColor="@color/verde_principal"
                            android:textSize="14sp" />

                        <EditText
                            android:id="@+id/etSSID"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/edittext_background"
                            android:hint="ex: MinhaRedeWiFi"
                            android:padding="10dp"
                            android:textColorHint="#999999" />

                        <!-- Botões Cancelar / Adicionar -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <Button
                                android:id="@+id/btnCancelarWiFi"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:backgroundTint="@color/vermelho_cancelar"
                                android:text="Cancelar"
                                android:textColor="@android:color/white"
                                android:textStyle="bold" />

                            <View
                                android:layout_width="8dp"
                                android:layout_height="wrap_content" />

                            <Button
                                android:id="@+id/btnAdicionarWiFi"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:backgroundTint="@color/verde_principal"
                                android:text="Adicionar"
                                android:textColor="@android:color/white"
                                android:textStyle="bold" />
                        </LinearLayout>

                    </LinearLayout>
                </ScrollView>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </RelativeLayout>
</ScrollView>
